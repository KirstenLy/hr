<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/actionbar_main"
        style="@style/ActionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_profession_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_profession_manager"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_profession_manager" />

        <TextView
            android:id="@+id/text_professional_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/profession_manager"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_big"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_profession_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_profession_developer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_profession_developer" />

        <TextView
            android:id="@+id/text_professional_developer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/profession_dev"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_big"
            android:textStyle="italic" />

    </LinearLayout>
